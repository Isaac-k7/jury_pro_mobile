  Future getData(int uri) async {
    String _uri = uri.toString();
    http.Response response =
        await http.get("http://172.31.240.26:8080/candidats/event/" + _uri);
    data = json.decode(response.body);
    setState(() {
      data = data;
    });
  }

  @override
  void initState() {
    super.initState();
    getData(widget.idEvent);
  }

